{%- style -%}
  .velocity-icons {
    padding: 6rem 0;
    background-color: var(--ag-primary-color);
    color: #fff;
  }

  .velocity-icons__header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .velocity-icons__title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .velocity-icons__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2.5rem;
  }

  .velocity-icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    transition: var(--ag-transition);
  }

  .velocity-icon-item:hover {
    transform: translateY(-5px);
  }

  .velocity-icon-item__icon {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .velocity-icon-item__icon svg {
    width: 100%;
    height: 100%;
    fill: var(--ag-accent-color);
  }

  .velocity-icon-item__text {
    font-size: 1.4rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    opacity: 0.9;
  }
{%- endstyle -%}

<section class="velocity-icons">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="velocity-icons__header reveal">
        <h2 class="velocity-icons__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    <div class="velocity-icons__grid">
      {%- for block in section.blocks -%}
        <div class="velocity-icon-item reveal" {{ block.shopify_attributes }}>
          <div class="velocity-icon-item__icon">
            {%- if block.settings.custom_icon != blank -%}
              {{ block.settings.custom_icon }}
            {%- else -%}
              {%- case block.settings.icon -%}
                {%- when 'video' -%}
                  <svg viewBox="0 0 24 24"><path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-9 9l-3 3V9l3 3z"/></svg>
                {%- when 'star' -%}
                   <svg viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                {%- when 'check' -%}
                   <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/></svg>
                {%- when 'shield' -%}
                   <svg viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/></svg>
                {%- else -%}
                   <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/></svg>
              {%- endcase -%}
            {%- endif -%}
          </div>
          <span class="velocity-icon-item__text">{{ block.settings.text }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Velocity Icon Highlights",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "TRUSTED BY THOUSANDS"
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "video", "label": "Video" },
            { "value": "star", "label": "Star" },
            { "value": "check", "label": "Check" },
            { "value": "shield", "label": "Shield" },
            { "value": "circle", "label": "Circle" }
          ],
          "default": "star"
        },
        {
          "type": "html",
          "id": "custom_icon",
          "label": "Custom SVG Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "5-STAR RATING"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Velocity Icon Highlights",
      "blocks": [
        { "type": "icon_item", "settings": { "text": "10,000+ CUSTOMERS", "icon": "star" } },
        { "type": "icon_item", "settings": { "text": "WORLDWIDE SHIPPING", "icon": "circle" } },
        { "type": "icon_item", "settings": { "text": "SECURE CHECKOUT", "icon": "shield" } },
        { "type": "icon_item", "settings": { "text": "VIDEO GUARANTEE", "icon": "video" } }
      ]
    }
  ]
}
{% endschema %}
